# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Health Check (optional)
# Set to 'true' to run health check on startup and prevent server start if Stripe is misconfigured
STRIPE_HEALTH_CHECK_ON_STARTUP=false

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=DesignDream <notifications@designdream.is>
RESEND_ADMIN_EMAIL=admin@designdream.is
RESEND_REPLY_TO_EMAIL=support@designdream.is
EMAIL_TEST_MODE=false

# Internal Webhooks
INTERNAL_WEBHOOK_SECRET=your_secure_random_secret_here

# Linear (Client Project Management)
LINEAR_API_KEY=lin_api_your_api_key_here
LINEAR_TEAM_ID=your_team_uuid_here
