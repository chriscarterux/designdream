# ===================================
# DesignDream Production Environment
# ===================================

# ----------------
# Application
# ----------------
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://designdream.is

# ----------------
# Supabase
# ----------------
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Database Connection (for migrations)
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# ----------------
# Stripe
# ----------------
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...

# Webhook signing secret (created when setting up webhook endpoint)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create products first)
STRIPE_PRICE_ID_STARTER=price_...
STRIPE_PRICE_ID_PROFESSIONAL=price_...
STRIPE_PRICE_ID_ENTERPRISE=price_...

# ----------------
# Email (Resend)
# ----------------
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@designdream.is

# ----------------
# Linear Integration
# ----------------
# Get from: https://linear.app/settings/api
LINEAR_API_KEY=lin_api_...
LINEAR_WEBHOOK_SECRET=...

# ----------------
# Basecamp (Optional)
# ----------------
BASECAMP_CLIENT_ID=...
BASECAMP_CLIENT_SECRET=...
BASECAMP_ACCOUNT_ID=...

# ----------------
# Analytics (Optional)
# ----------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-...
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ----------------
# Error Tracking (Optional)
# ----------------
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=...
SENTRY_ORG=...
SENTRY_PROJECT=...

# ----------------
# Rate Limiting (Optional)
# ----------------
UPSTASH_REDIS_REST_URL=https://...
UPSTASH_REDIS_REST_TOKEN=...

# ----------------
# Security
# ----------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=...
JWT_SECRET=...

# ----------------
# Feature Flags (Optional)
# ----------------
ENABLE_BETA_FEATURES=false
ENABLE_MAINTENANCE_MODE=false
